user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log;
pid /var/run/nginx.pid;

events {
    worker_connections  1024;
}
http {
    upstream backend {
      {% for host in groups['web'] %}
        server {{ host }}:3000;
      {% endfor %}
    }
    server {
        listen       80 default_server;
        location / {
          proxy_pass http://backend;
        }
    }
}
